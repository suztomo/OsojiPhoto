body {
    font-family: sans-serif;
}
.message-box {
    padding-top: 10px;
    padding-bottom: 10px;
    margin-bottom: 16px;
    overflow: hidden;
}
.message-box img {
    margin-bottom: 16px;
    border: 1px solid #555;
}

.message-box .caption {
    padding: 12px 16px;
    text-align: left;
    text-justify: distribute-all-lines;
}

.message-box p{
    font-size: 10px;
}

#footer {
    clear:both;
    text-align: center;
}

